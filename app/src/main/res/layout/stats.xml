<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from date"
        android:textAllCaps="true"
        android:layout_margin="16dp"
        android:id="@+id/t_from"
        android:textColor="#000"/>

    <Button
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/calendar_icon"
        android:layout_toRightOf="@id/t_from"
        android:id="@+id/btn_from"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spinner1"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:text="Period"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15sp"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/calendar_icon"
        android:layout_toLeftOf="@+id/t_to"
        android:layout_marginLeft="36dp"
        android:id="@+id/btn_to"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="To date"
        android:layout_margin="16dp"
        android:textAllCaps="true"
        android:id="@+id/t_to"
        android:textColor="#000"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/t_from"
        android:layout_marginTop="17dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spinner1"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="TextView"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="TextView"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="TextView"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="TextView"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner3"
        android:layout_toLeftOf="@+id/textView7"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:singleLine="false"
        android:text="Min % Attendance Required"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15sp"
        android:textColor="#000"/>

</RelativeLayout>